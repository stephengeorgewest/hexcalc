@section scripts{
	<script type="text/javascript" src="~/Scripts/Custom/HexCalcs.js"></script>
}
<div class="container-fluid">
	<div class="page-header">
		<h1>Hexagon Calculator</h1>
	</div>
</div>

<div class="container-fluid" >
	<div class="row-fluid">
		<div class="span2" >
		</div>
		<div class="span10" >
			<div class="span12">
				<div class="row-fluid">
					<div class="span3">
						<img src="~/Content/images/Apothem.gif" alt="" data-bind="click: edit.bind($data, 'apothem')" />
						<div class="row-fluid">
							<div class="offset3">
								<div class="control-group">
									<div class="control-label">Apothem Length:</div>
									<div class="controls">
										<strong><span class="btn input-medium" data-bind="visible: !apothemEdit(), text: calcApothem, click: edit.bind($data, 'apothem')" ></span></strong>
										<input class="input-medium" type="text" data-bind="visible: apothemEdit, value:givenApothem, hasfocus: apothemEdit" />
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="span3">
						<img src="~/Content/images/Perimeter.gif" alt="" data-bind="click: edit.bind($data, 'perimeter')" />
						<div class="row-fluid">
							<div class="offset3">
								<div class="control-group">
									<div class="control-label">Perimeter Length:</div>
									<div class="controls">
										<span class="btn input-medium" data-bind="visible: !perimeterEdit(), text: calcPerimeter, click: edit.bind($data, 'perimeter')" ></span>
										<input class="input-medium" type="text" data-bind="visible: perimeterEdit, value: givenPerimeter, hasfocus: perimeterEdit" />
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="span3">
						<img src="~/Content/images/Area.gif" alt="" data-bind="click: edit.bind($data, 'area')" />
						<div class="row-fluid">
							<div class="offset3">
								<div class="control-group">
									<div class="control-label">Area Size:</div>
									<div class="controls">
										<span class="btn input-medium" data-bind="visible: !areaEdit(), text: calcArea, click: edit.bind($data, 'area')"></span>
										<input class="input-medium" type="text" data-bind="visible: areaEdit, value: givenArea, hasfocus: areaEdit" />
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="span3">
						<img src="~/Content/images/VertexToVertex.gif" alt="" data-bind="click: edit.bind($data, 'VtoV')"/>
						<div class="row-fluid">
							<div class="offset3">
								<div class="control-group">
									<div class="control-label">Vertex to Vertex Length:</div>
									<div class="controls">
										<span class="btn input-medium" data-bind="visible: !vToVEdit(), text: calcVtoV, click: edit.bind($data, 'VtoV')" ></span>
										<input class="input-medium" type="text" data-bind="visible: vToVEdit, value: givenVtoV, hasfocus: vToVEdit"/>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span3">
					<img src="~/Content/images/CenterToVertex.gif" alt="" data-bind="click: edit.bind($data, 'CtoV')"/>
					<div class="row-fluid">
						<div class="offset3">
							<div class="control-group">
								<div class="control-label">Center to Vertex Length:</div>
								<div class="controls">
									<span class="btn input-medium" data-bind="visible: !cToVEdit(), text: calcCtoV, click: edit.bind($data, 'CtoV')" ></span>
									<input class="input-medium" type="text" data-bind="visible: cToVEdit, value: givenCtoV, hasfocus: cToVEdit"/>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="span3">
					<img src="~/Content/images/SideLength.gif" alt="" data-bind="click: edit.bind($data, 'side')" />
					<div class="row-fluid">
						<div class="offset3">
							<div class="control-group">
								<div class="control-label">Side Length:</div>
								<div class="controls">
									<span class="btn input-medium" data-bind="visible: !sideEdit(), text: calcSide, click: edit.bind($data, 'side')" ></span>
									<input class="input-medium" type="text" data-bind="visible: sideEdit, value: givenSide, hasfocus: sideEdit"/>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="span3">
					<img src="~/Content/images/SideToSide.gif" alt="" data-bind="click: edit.bind($data, 'FtoF')" />
					<div class="row-fluid">
						<div class="offset3">
							<div class="control-group">
								<div class="control-label">Side to Side Length:</div>
								<div class="controls">
									<span class="btn input-medium" data-bind="visible: !fToFEdit(), text: calcFtoF, click: edit.bind($data, 'FtoF')" ></span>
									<input class="input-medium" type="text" data-bind="visible: fToFEdit, value: givenFtoF, hasfocus: fToFEdit"/>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
